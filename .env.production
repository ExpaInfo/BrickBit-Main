APP_NAME='BrickBit.net'
APP_ENV=production
APP_KEY=base64:YOUR_32_CHARACTER_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com
FAKE_NOTIFICATIONS=false
L5_SWAGGER_GENERATE_ALWAYS=false

MAIN_ACCOUNT_ID=1003

CI_PIPELINE_IID=latest

SESSION_COOKIE=bh_session
SESSION_DOMAIN=.your-domain.com

MAINTENANCE_KEY=your-secret-maintenance-key

LOG_DB_QUERIES=false
LOG_CHANNEL=stack

JS_ASSET_PATH=/dist/js/
CSS_ASSET_PATH=/dist/css/

# reCAPTCHA Settings
RECAPTCHA_SECRET=your-recaptcha-secret
RECAPTCHA_PUBLIC=your-recaptcha-public
HCAPTCHA_SECRET=your-hcaptcha-secret
HCAPTCHA_PUBLIC=your-hcaptcha-public

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=your-mysql-host
DB_PORT=3306
DB_DATABASE=brickbit
DB_USERNAME=brickbit
DB_PASSWORD=your-secure-password

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Storage Configuration
STORAGE_DOMAIN=https://cdn.your-domain.com
STORAGE_PENDING_512=/default/pending.png
STORAGE_PENDING_SET=/default/pendingset.png
STORAGE_DECLINED_512=/default/declined.png
STORAGE_DECLINED_SET=/default/declinedset.png
STORAGE_AVATARS_LOC=/images/avatars/
STORAGE_ITEMS_LOC=/v2/images/shop/thumbnails/
STORAGE_FILE_LOC=/var/www/storage
STORAGE_S3_LOC=/assets
STORAGE_LOCAL_LOC=

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# Redis Configuration
REDIS_DEFAULT_DB=1
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Cache and Session Configuration
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=10800
SESSION_SECURE_COOKIE=true
QUEUE_DRIVER=redis

# OAuth Configuration
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=1
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=your-passport-secret

# Stripe Configuration
STRIPE_TESTING_KEY_PUBLIC=pk_live_your_public_key
STRIPE_TESTING_KEY_SECRET=sk_live_your_secret_key
STRIPE_TESTING_WEBHOOK_SECRET=whsec_your_webhook_secret